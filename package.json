{
    "name": "@gik/tools-streamer",
    "version": "0.0.7",
    "description": "GIK's take on the Observable",
    "license": "MIT",
    "homepage": "https://github.com/gikmx/tools",
    "contributors": [
        "Héctor Menéndez <hector@gik.mx>"
    ],
    "keywords": [
        "rxjs",
        "functional programming",
        "observable",
        "streaming",
        "utility",
        "tools"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gikmx/tools-streamer"
    },
    "bugs": {
        "url": "https://github.com/gikmx/tools/issues"
    },
    "engines": {
        "node": ">=6.11.3",
        "npm": ">=5.4.2"
    },
    "main": "lib/streamer.js",
    "directories": {
        "test": "./test",
        "src": "./src",
        "out": "./lib"
    },
    "scripts": {
        "ver": "gik-npm version",
        "lint": "gik-npm lint",
        "docs": "gik-npm docs",
        "build": "gik-npm build",
        "test": "gik-npm test",
        "verify": "gik-npm lint:src && gik-npm lint:test && gik-npm build && gik-npm test",
        ":start": "nodemon $(printenv | grep -E '^npm_package_directories' | grep -vE '^npm_package_directories_out' | cut -d'=' -f2 | xargs -I {} printf '-w %s ' {})",
        "start": "npm run :start -s -- -e 'js,json' -x ",
        "pub": "npm run verify -s && npm run docs -s && npm publish --access public --tag",
        "precommit": "npm run verify -s && gik-npm version patch && npm run docs -s"
    },
    "dependencies": {
        "@gik/tools-checker": "0.0.8",
        "@gik/tools-logger": "0.0.4",
        "@gik/tools-thrower": "^0.1.9",
        "rxjs": "^5.5.1"
    },
    "devDependencies": {
        "@gik/eslint-config": "0.0.4",
        "@gik/npm": "0.0.29",
        "nodemon": "^1.12.1"
    }
}
